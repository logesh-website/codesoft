import tkinter as tk
from tkinter import messagebox
tasks = []
def refresh_list():
    listbox.delete(0, tk.END)
    for i, task in enumerate(tasks, 1):
        status = "✔ Done" if task["done"] else "✗ Not Done"
        listbox.insert(tk.END, f"{i}. {task['name']} ({status})")
def add_task():
    task_name = entry.get().strip()
    if not task_name:
        messagebox.showwarning("Warning", "Please enter a task.")
        return
    tasks.append({"name": task_name, "done": False})
    entry.delete(0, tk.END)
    refresh_list()
def mark_done():
    selection = listbox.curselection()
    if not selection:
        messagebox.showwarning("Warning", "Select a task to mark as done.")
        return
    index = selection[0]
    tasks[index]["done"] = True
    refresh_list()
def update_task():
    selection = listbox.curselection()
    if not selection:
        messagebox.showwarning("Warning", "Select a task to update.")
        return
    new_name = entry.get().strip()
    if not new_name:
        messagebox.showwarning("Warning", "Enter a new name for the task.")
        return
    index = selection[0]
    tasks[index]["name"] = new_name
    entry.delete(0, tk.END)
    refresh_list()
def delete_task():
    selection = listbox.curselection()
    if not selection:
        messagebox.showwarning("Warning", "Select a task to delete.")
        return
    index = selection[0]
    tasks.pop(index)
    refresh_list()
root = tk.Tk()
root.title("To-Do List")
root.geometry("400x350")
entry = tk.Entry(root, width=35)
entry.pack(pady=10)
button_frame = tk.Frame(root)
button_frame.pack(pady=5)
tk.Button(button_frame, text="Add", width=10, command=add_task).grid(row=0, column=0, padx=5)
tk.Button(button_frame, text="Update", width=10, command=update_task).grid(row=0, column=1, padx=5)
tk.Button(button_frame, text="Done", width=10, command=mark_done).grid(row=0, column=2, padx=5)
tk.Button(button_frame, text="Delete", width=10, command=delete_task).grid(row=0, column=3, padx=5)
listbox = tk.Listbox(root, width=50, height=12)
listbox.pack(pady=10)
refresh_list()
root.mainloop()
