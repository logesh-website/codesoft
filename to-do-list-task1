import tkinter as tk
from tkinter import messagebox
tasks = []
def show_tasks():
    listbox.delete(0, tk.END)
    for i, task in enumerate(tasks, start=1):
        status = "✔" if task["done"] else "✗"
        listbox.insert(tk.END, f"{i}. {task['name']} [{status}]")

def add_task():
    name = entry.get().strip()
    if not name:
        messagebox.showwarning("Warning", "Task name cannot be empty.")
        return
    tasks.append({"name": name, "done": False})
    entry.delete(0, tk.END)
    show_tasks()

def mark_done():
    sel = listbox.curselection()
    if not sel:
        messagebox.showwarning("Warning", "Select a task first.")
        return
    tasks[sel[0]]["done"] = True
    show_tasks()

def update_task():
    sel = listbox.curselection()
    if not sel:
        messagebox.showwarning("Warning", "Select a task to update.")
        return
    new_name = entry.get().strip()
    if not new_name:
        messagebox.showwarning("Warning", "Task name cannot be empty.")
        return
    tasks[sel[0]]["name"] = new_name
    entry.delete(0, tk.END)
    show_tasks()

def delete_task():
    sel = listbox.curselection()
    if not sel:
        messagebox.showwarning("Warning", "Select a task to delete.")
        return
    tasks.pop(sel[0])
    show_tasks()

root = tk.Tk()
root.title("To-Do List")
root.geometry("400x300")
entry = tk.Entry(root, width=40)
entry.pack(pady=5)
frame_main = tk.Frame(root)
frame_main.pack(pady=5)
listbox = tk.Listbox(frame_main, width=30, height=12)
listbox.pack(side=tk.LEFT, padx=5)
btn_frame = tk.Frame(frame_main)
btn_frame.pack(side=tk.LEFT, padx=5)
tk.Button(btn_frame, text="Add", width=10, command=add_task).pack(pady=2)
tk.Button(btn_frame, text="Update", width=10, command=update_task).pack(pady=2)
tk.Button(btn_frame, text="Done", width=10, command=mark_done).pack(pady=2)
tk.Button(btn_frame, text="Delete", width=10, command=delete_task).pack(pady=2)
show_tasks()
root.mainloop()

